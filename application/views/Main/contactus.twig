{% extends "Templates/default.twig" %}

{% block content %}
<div class="bloc tc-black bgc-white l-bloc" id="bloc-38">
	<div class="container bloc-lg">		
		<div class="row">
			<div class="col-sm-12 text-justify">				
				<h1 class="mg-md text-center tc-black">
					Szabaduszok.com - Írj nekünk!
				</h1>
				{% if message %}
				<div class='alert alert-success text-center'>{{ message }}</div>
				{% endif %}					
				
				<p class="text-justify">Bármilyen kérdésed, észrevételed, véleményed van, szivesen fogadjuk azt. Az alábbi űrlap kitöltésével tudsz velünk kapcsolatba lépni. Ha szeretnél, e-mailt is tudsz küldeni a <a href="mailto:hello@szabaduszok.com" target="_top">hello@szabaduszok.com</a> címre.</p>
				<form id="contact-form" method="POST" action="{{ ROOT }}szabaduszok-irj-nekunk">
				
					<span class="ion ion-person pull-left icon-sm icon-dark-gray"></span>
					<div class="form-group">
						<label>
							Név*
						</label>
						<input id="name" class="form-control" name="name" required data-rules='{"notEmpty": "true"}' value="{{ loggedUser.name() }}">
					</div>
					
					<span class="ion ion-email pull-left icon-sm icon-dark-gray"></span>
					<div class="form-group">
						<label>
							Email*
						</label>
						<input id="email" class="form-control" type="email" name="email" required data-rules='{"notEmpty": "true", "email": "true"}' value="{{ loggedUser.email }}">
					</div>										
					
					<span class="ion ion-clipboard pull-left icon-sm icon-dark-gray"></span>
					<div class="form-group">
						<label>
							Üzenet*
						</label>
						<textarea class="form-control" id="message" name="message" rows="4" cols="50" required data-rules='{"notEmpty": "true"}'></textarea>
					</div>					
										
					<button class="bloc-button btn btn-lg btn-block btn-lime-green" type="submit">
						<span class="ion ion-checkmark icon-spacer icon-white"></span>Elküld
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock content %}