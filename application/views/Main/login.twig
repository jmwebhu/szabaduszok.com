{% extends "Templates/default.twig" %}

{% block content %}
<div class="bloc tc-black bgc-white l-bloc" id="bloc-18">
	<div class="container bloc-lg">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="mg-md text-center tc-black">
					Szabadúszók Belépés
				</h1>
				<form id="form_8" novalidate>
					<span class="ion ion-email pull-left icon-sm icon-dark-gray"></span>
					<div class="form-group">
						<label>
							Email
						</label>
						<input id="email8" class="form-control" type="email" name="email" required />
					</div>
					
					<span class="ion ion-locked pull-left icon-sm icon-dark-gray"></span>
					<div class="form-group">
						<label>
							Jelszó
						</label>
						<input id="name8" class="form-control" name="password" required />
					</div>
					
					<div class="text-center">
						<a href="{{ ROOT }}szabaduszok-elfelejtett-jelszo" class="a-btn ltc-lapis-lazuli">Elfelejtettem a jelszavam</a>
					</div> 
										
					<button class="bloc-button btn btn-lg btn-block btn-lime-green" type="submit">
						<span class="ion ion-checkmark icon-spacer icon-white"></span>Belépés
					</button>
					
					<p class="text-center mt">Még nem csatlakoztál? <a href="{{ ROOT }}erdekel">Kattints ide!</a></p>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}